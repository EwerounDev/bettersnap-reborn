{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "noUncheckedIndexedAccess": true
  },
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
